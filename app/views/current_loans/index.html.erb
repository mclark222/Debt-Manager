<div>
  <div>
    <h1>
      List of all current loans
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new current loan
    </h2>

    <form action="/insert_current_loan" method="post">
      <div>
        <label for="total_loan_amount_box">
          Total loan amount
        </label>

        <input type="text" id="total_loan_amount_box" name="query_total_loan_amount">
      </div>

      <div>
        <label for="lender_name_box">
          Lender name
        </label>

        <input type="text" id="lender_name_box" name="query_lender_name">
      </div>

      <div>
        <label for="repayment_period_box">
          Repayment period
        </label>

        <input type="text" id="repayment_period_box" name="query_repayment_period">
      </div>

      <div>
        <label for="apr_box">
          Apr
        </label>

        <input type="text" id="apr_box" name="query_apr">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="first_payment_date_box">
          First payment date
        </label>

        <input type="date" id="first_payment_date_box" name="query_first_payment_date">
      </div>

      <div>
        <label for="loan_start_date_box">
          Loan start date
        </label>

        <input type="date" id="loan_start_date_box" name="query_loan_start_date">
      </div>

      <div>
        <label for="amount_borrowed_box">
          Amount borrowed
        </label>

        <input type="text" id="amount_borrowed_box" name="query_amount_borrowed">
      </div>

      <div>
        <label for="amount_remaining_box">
          Amount remaining
        </label>

        <input type="text" id="amount_remaining_box" name="query_amount_remaining">
      </div>

      <div>
        <label for="next_loan_receiving_date_box">
          Next loan receiving date
        </label>

        <input type="date" id="next_loan_receiving_date_box" name="query_next_loan_receiving_date">
      </div>

      <div>
        <label for="next_loan_receiving_amount_box">
          Next loan receiving amount
        </label>

        <input type="text" id="next_loan_receiving_amount_box" name="query_next_loan_receiving_amount">
      </div>

      <button>
        Create current loan
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Total loan amount
        </th>

        <th>
          Lender name
        </th>

        <th>
          Repayment period
        </th>

        <th>
          Apr
        </th>

        <th>
          User
        </th>

        <th>
          First payment date
        </th>

        <th>
          Loan start date
        </th>

        <th>
          Amount borrowed
        </th>

        <th>
          Amount remaining
        </th>

        <th>
          Next loan receiving date
        </th>

        <th>
          Next loan receiving amount
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_current_loans.each do |a_current_loan| %>
      <tr>
        <td>
          <%= a_current_loan.id %>
        </td>

        <td>
          <%= a_current_loan.total_loan_amount %>
        </td>

        <td>
          <%= a_current_loan.lender_name %>
        </td>

        <td>
          <%= a_current_loan.repayment_period %>
        </td>

        <td>
          <%= a_current_loan.apr %>
        </td>

        <td>
          <%= a_current_loan.user_id %>
        </td>

        <td>
          <%= a_current_loan.first_payment_date %>
        </td>

        <td>
          <%= a_current_loan.loan_start_date %>
        </td>

        <td>
          <%= a_current_loan.amount_borrowed %>
        </td>

        <td>
          <%= a_current_loan.amount_remaining %>
        </td>

        <td>
          <%= a_current_loan.next_loan_receiving_date %>
        </td>

        <td>
          <%= a_current_loan.next_loan_receiving_amount %>
        </td>

        <td>
          <%= time_ago_in_words(a_current_loan.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_current_loan.updated_at) %> ago
        </td>

        <td>
          <a href="/current_loans/<%= a_current_loan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
